<% include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      
      <div class="container">
        <h1>Welcome To CoffeeHub</h1>
        <p>Add new shop to get in touch with excellence</p>
        <p>
          <a class="btn btn-primary btn-large" href="/coffeeshops/new">Add New shop</a>
        </p>
      </div>
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
      <% coffeeshops.forEach(function(coffeeshop){ %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= coffeeshop.image %>">
            <div class="caption">
              <h4><%= coffeeshop.name %></h4>
            </div>
            <p>
              <a href="/coffeeshops/<%= coffeeshop._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

<% include ../partials/footer %>
